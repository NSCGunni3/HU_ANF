<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="changeLgnum" title="{i18n>changeLgnumTitle}">
		<content>
			<Label text="{i18n>changeLgnumLabel}"/>
			<Input id="lgnum" value="{/lgnum}" liveChange="false"/>
		</content>
		<beginButton>
			<Button text="{i18n>changeBtn}" press="onSubmitLgnum"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>cancel}" press="onCloseDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>